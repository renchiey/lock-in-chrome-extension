{
  "compilerOptions": {
    /* === Output Settings === */
    "outDir": "./dist",                // compiled JS files go here
    "rootDir": "./src",                // your TS source files

    /* === Module & Target === */
    "target": "ES2020",                // modern JS syntax
    "module": "ESNext",                // enables import/export syntax
    "moduleResolution": "node",        // resolves modules like Node.js
    "lib": ["ES2020", "DOM"],          // includes DOM types for browser projects

    /* === Strictness & Safety === */
    "strict": true,                    // enables all strict type checks
    "noImplicitAny": true,             // prevents implicit `any` types
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,              // faster build, skips checking type defs

    /* === Source Maps === */
    "sourceMap": true,                 // helps debugging in browser devtools

    /* === Clean Imports === */
    "esModuleInterop": true,           // enables default imports from CommonJS
    "types": ["chrome-types"],
    "allowSyntheticDefaultImports": true,

    /* === File Handling === */
    "resolveJsonModule": true,         // allows importing .json files
    "noEmitOnError": true              // donâ€™t emit JS if TS errors exist
  },
  "include": ["src/**/*", "settings"],             // include all your TS files
  "exclude": ["node_modules"]
}
