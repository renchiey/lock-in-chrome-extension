{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./ts",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["chrome-types"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmitOnError": true
  },
  "include": ["ts/**/*"],
  "exclude": ["node_modules"]
}
